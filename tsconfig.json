{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2020",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "alwaysStrict": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "src",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts"]
}
