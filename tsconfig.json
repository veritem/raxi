{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ES2020",
        "outDir": "dist",
        "importHelpers": false,
        "strict": true,
        "rootDir": ".",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["tests", "src/starters"]
}
